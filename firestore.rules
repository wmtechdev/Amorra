rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    // Document ID is now the user's UID (much simpler!)
    match /users/{userId} {
      // Allow reading own document
      allow get: if isAuthenticated() && request.auth.uid == userId;

      // Allow listing all users (for search/discovery)
      allow list: if isAuthenticated();

      // Allow creating own document during signup
      allow create: if isAuthenticated()
        && request.auth.uid == userId
        && request.auth.uid == request.resource.data.id
        && request.resource.data.keys().hasAll(['id', 'name', 'createdAt', 'email']);

      // Allow updating own document
      allow update: if isAuthenticated()
        && request.auth.uid == userId
        && request.auth.uid == resource.data.id
        && request.resource.data.id == resource.data.id;

      // Never allow deletion
      allow delete: if false;
    }

    match /messages/{messageId} {
      allow read, write: if isAuthenticated()
        && (resource.data.userId == request.auth.uid
            || request.resource.data.userId == request.auth.uid);
    }

    match /chat_sessions/{sessionId} {
      allow read, write: if isAuthenticated()
        && (resource.data.userId == request.auth.uid
            || request.resource.data.userId == request.auth.uid);
    }

    match /subscriptions/{subscriptionId} {
      allow read, write: if isAuthenticated()
        && (resource.data.userId == request.auth.uid
            || request.resource.data.userId == request.auth.uid);
    }

    match /user_preferences/{preferenceId} {
      allow read, write: if isAuthenticated()
        && (resource.data.userId == request.auth.uid
            || request.resource.data.userId == request.auth.uid);
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
