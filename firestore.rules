rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    match /users/{userId} {

      // Authentication
      allow get: if isAuthenticated() && request.auth.uid == userId;
      allow list: if isAuthenticated();
      allow create: if isAuthenticated()
        && request.auth.uid == userId;
      allow update: if isAuthenticated()
        && request.auth.uid == userId;
      allow delete: if isAuthenticated()
        && request.auth.uid == userId;

      // User preferences subcollection
      match /preferences/{preferenceId} {
        allow read: if isAuthenticated() && request.auth.uid == userId;
        allow write: if isAuthenticated() && request.auth.uid == userId;
      }
    }

    match /messages/{messageId} {
      allow read, write: if isAuthenticated();
    }
    
    // Nested structure: messages/{userId}/chats/{messageId}
    match /messages/{userId} {
      // Allow access to user's message document if they own it
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
      
      // Allow access to chat messages subcollection
      match /chats/{messageId} {
        allow read, write: if isAuthenticated() && request.auth.uid == userId;
      }
    }

    // Chat sessions
    match /chat_sessions/{sessionId} {
      allow read, write: if isAuthenticated()
        && (resource.data.userId == request.auth.uid
            || request.resource.data.userId == request.auth.uid);
    }

    // Subscriptions
    match /subscriptions/{subscriptionId} {
      allow read, write: if isAuthenticated()
        && (resource.data.userId == request.auth.uid
            || request.resource.data.userId == request.auth.uid);
    }

    // User preferences
    match /user_preferences/{preferenceId} {
      allow read, write: if isAuthenticated()
        && (resource.data.userId == request.auth.uid
            || request.resource.data.userId == request.auth.uid);
    }

    // Daily suggestions
    match /daily_suggestions/{suggestionId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admins can write (handled server-side or via admin dashboard)
    }

    // Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
