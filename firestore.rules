rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users Collection
    // Users can read their own data and create/update their own profile
    // Only authenticated users can read other users' basic info (for display purposes)
    match /users/{userId} {
      // Users can read their own document
      allow read: if isOwner(userId);
      
      // Users can create their own document during signup
      allow create: if isAuthenticated() 
        && request.auth.uid == userId
        && request.resource.data.id == userId
        && request.resource.data.keys().hasAll(['id', 'name', 'createdAt']);
      
      // Users can update their own document
      allow update: if isOwner(userId)
        && request.resource.data.id == userId; // Prevent ID changes
      
      // Users cannot delete their own account (handle via admin/cloud function)
      allow delete: if false;
    }

    // Messages Collection
    // Users can only read/write their own messages
    match /messages/{messageId} {
      allow read, write: if isAuthenticated() 
        && (resource.data.userId == request.auth.uid 
            || request.resource.data.userId == request.auth.uid);
    }

    // Chat Sessions Collection
    // Users can only access their own chat sessions
    match /chat_sessions/{sessionId} {
      allow read, write: if isAuthenticated() 
        && (resource.data.userId == request.auth.uid 
            || request.resource.data.userId == request.auth.uid);
    }

    // Subscriptions Collection
    // Users can only read/write their own subscriptions
    match /subscriptions/{subscriptionId} {
      allow read, write: if isAuthenticated() 
        && (resource.data.userId == request.auth.uid 
            || request.resource.data.userId == request.auth.uid);
    }

    // User Preferences Collection
    // Users can only access their own preferences
    match /user_preferences/{preferenceId} {
      allow read, write: if isAuthenticated() 
        && (resource.data.userId == request.auth.uid 
            || request.resource.data.userId == request.auth.uid);
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}